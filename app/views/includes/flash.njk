{% block flash %}
<div class="grid-row">
  {% if flash.genericError %}
  <div class="column-full flash-container">
    <div class="notification generic-error error-summary">
      {{ flash.genericError | safe }}
    </div>
  </div>
  {% endif %}
  {% if flash.generic %}
  <div class="column-full flash-container">
    <div class="notification generic-flash">
      {{ flash.generic | safe }}
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}

{% extends "../layout.njk" %}

{% block page_title %}
Create a payment link - {{currentServiceName}} {{currentGatewayAccount.full_type}} - GOV.UK Pay
{% endblock %}

{% block mainClasses %}fullwidth{% endblock %}

{% block full_width_content %}
<div class="grid-row">
  <aside class="column-one-third">
    <nav role="navigation" class="navigation settings-navigation">
      <ul class="list">
        <li class="active"><a href="#">Create payment link</a></li>
        <li><a href="#">Manage payment&nbsp;links</a></li>
      </ul>
    </nav>
  </aside>
  <section class="column-two-thirds">
    {% include "includes/flash.njk" %}
    <h1 class="page-title">Review your payment link details</h1>

    <dl class="govuk-check-your-answers cya-questions-short">
      <div class="review-title">
        <dt class="cya-question">
          Title
        </dt>
        <dd class="cya-answer">
          {{ paymentLinkTitle }}
        </dd>
        <dd class="cya-change">
          <a href="{{ change }}?field=payment-link-title">
            Change <span class="visuallyhidden">Title</span>
          </a>
        </dd>
      </div>
      <div class="review-details">
        <dt class="cya-question">
          More details
        </dt>
        <dd class="cya-answer">
          {% if paymentLinkDescription %}
            {{ paymentLinkDescription }}
          {% else %}
            <span class="grey">No details set</span>
          {% endif %}
        </dd>
        <dd class="cya-change">
          <a href="{{ change }}?field=payment-link-description">
            Change <span class="visuallyhidden">More details</span>
          </a>
        </dd>
      </div>
      <div class="review-amount">
        <dt class="cya-question">
          Payment amount
        </dt>
        <dd class="cya-answer">
          {% if paymentLinkAmount %}
            Â£{{ paymentLinkAmount }}
          {% else %}
            <span class="grey">Amount will be set by user</span>
          {% endif %}
        </dd>
        <dd class="cya-change">
<!--           <a href="{{ change }}">
            Change <span class="visuallyhidden">payment amount</span>
          </a>
 -->        </dd>
      </div>
    </dl>

    <p><a class="cancel" href="{{ returnToStart }}">Cancel</a></p>
  </section>
</div>
{% endblock %}

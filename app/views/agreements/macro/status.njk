{% set statusStyleMap = {
"CREATED": "govuk-tag--grey",
"ACTIVE": "govuk-tag--green",
"EXPIRED": "govuk-tag--yellow",
"CANCELLED": "govuk-tag--yellow",
"INACTIVE": "govuk-tag--yellow"
} %}
{% set statusTextMap = {
"CREATED": "needs payment details",
"ACTIVE": "active",
"CANCELLED": "cancelled",
"EXPIRED": "expired",
"INACTIVE": "inactive"
} %}

{% macro agreementStatusTag(status) %}
<strong class="govuk-tag {{ statusStyleMap[status] }}">{{ statusTextMap[status] }}</strong>
{% endmacro %}
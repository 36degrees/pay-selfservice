{% extends "../layout.njk" %}

{% block pageTitle %}
   Policy Document Download - GOV.UK Pay
{% endblock %}

{% block mainContent %}
<div class="govuk-grid-column-full">
  <h1 class="govuk-heading-l page-title">
    {% block policyTitle %} {% endblock %}
  </h1>
</div>

<div class="govuk-grid-column-two-thirds">
  <p class="govuk-body">
    {% block policyDescription %} {% endblock %}
  </p>
  <ul class="govuk-list govuk-list--bullet">
    <li>
      <!-- @FIXME(sfount) check the name of the downloaded PDF document - is it according the PDF headers? If not set the name through the download attribute -->
      <a href="{{ link }}" download>{% block policyDownloadLinkDescription %}{% endblock %}</a>
    </li>
  </ul>
  <p class="govuk-body">These terms are confidential and should not be shared outside of your organisation.</p>
</div>
{% endblock %}

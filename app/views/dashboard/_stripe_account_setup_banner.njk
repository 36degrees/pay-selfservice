{% if permissions.stripe_account_details_update %}
  {% if stripeAccountSetup and (not stripeAccountSetup.bankAccount or not stripeAccountSetup.vatNumberCompanyNumber or not stripeAccountSetup.responsiblePerson) %}
    <div class="govuk-grid-column-full govuk-!-margin-bottom-3">
      <div class="account-status-panel">
        <h3 class="govuk-heading-m govuk-!-font-weight-bold" style="">You must add more details to receive money into your bank account</h3>
        <p class="govuk-body-m">
          Your service can now take payments from users. You must add more details or Stripe will not pay the money into your bank account. Please add:
        </p>

        <ul class="govuk-list">
          {% if not stripeAccountSetup.bankAccount %}
            <li> - bank details</li>
          {% endif %}
          {% if not stripeAccountSetup.responsiblePerson %}
            <li> - details about your responsible person</li>
          {% endif %}
          {% if not stripeAccountSetup.vatNumberCompanyNumber %}
            <li> - your organisationâ€™s VAT number</li>
          {% endif %}
        </ul>

        {{
        govukButton({
          text: 'Add details',
          classes: 'govuk-!-margin-bottom-0',
          href: routes.stripe.addPspAccountDetails,
          attributes: {
            id: "add-account-details"
          }
        })
      }}
      </div>
    </div>
  {% endif %}
{% endif %}

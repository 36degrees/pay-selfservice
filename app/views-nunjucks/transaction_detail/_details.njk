<table class="transaction-details">
  <tbody>

  <tr>
    <td>Reference number:</td>
    <td id="reference">{{reference}}</td>
  </tr>

  {% if permissions.transactions_description_read %}
  <tr>
    <td>Description:</td>
    <td id="description">{{description}}</td>
  </tr>
  {% endif %}

  <tr>
    <td>Payment status:</td>
    <td id="state">{{state_friendly}}{% if state.message %} ({{state.code}} - {{state.message}}){% endif %}</td>
  </tr>

  {% if permissions.transactions_amount_read %}
  <tr>
    <td>Payment amount:</td>
    <td id="amount">{{amount}}</td>
  </tr>

  <tr>
    <td>Refunded amount:</td>
    <td id="refunded-amount" class="qa-refunded-amount ">{% if refunded %}–{{refunded_amount}}{% else %}£0.00{% endif %}</td>
  </tr>
  {% endif %}

  <tr>
    <td>Date created:</td>
    <td id="date-created">{{updated}}</td>
  </tr>

  <tr>
    <td>Provider:</td>
    <td id="provider">{{payment_provider}}</td>
  </tr>

  <tr>
    <td>Provider ID:</td>
    <td id="transaction-id">{{gateway_transaction_id}}</td>
  </tr>

  <tr>
    <td>GOV.UK payment ID:</td>
    <td id="payment-id">{{charge_id}}</td>
  </tr>
  </tbody>
</table>
